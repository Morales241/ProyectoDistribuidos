<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".agregar_comentario">

    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reportar inconsistencia"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/textSupermercado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Supermercado: "
        android:layout_marginTop="12dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textProducto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Producto: "
        android:layout_marginTop="4dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/inputComentario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="AÃ±ada un comentario..."
        android:layout_marginTop="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnConfirmarReporte"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Confirmar reporte"/>

        <Button
            android:id="@+id/btnCancelar"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

</LinearLayout>